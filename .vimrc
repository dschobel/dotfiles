" Fundamentals
set nocompatible
set hlsearch
set incsearch
set ignorecase
set smartcase

" Tabs
 set autoindent
 set smarttab
 set smartindent
 set tabstop=4
 set softtabstop=4
 set shiftwidth=4
 set expandtab

" Colors
"set background=dark
syntax on " syntax highlighting

" Mappings
imap jj <Esc>

"File Stuff
filetype plugin indent on

"ragtag mappings
let g:ragtag_global_maps = 1 
